<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="16dp"
   >

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:padding="8dp"
        android:src="@drawable/khoahoc" />

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="90dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvGHTenKhoaHoc"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="TEN KHOA HOC"
            android:textColor="#6c5ce7"
            android:textSize="22sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:text="Giá thành:"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvGHGiaKhoaHoc"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="500.000"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:text="Giảng viên"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvGHTenGiangVien"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Mai Tien Long"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:src="@drawable/delete"
        android:layout_width="20dp"
        android:layout_height="90dp"/>

</LinearLayout>